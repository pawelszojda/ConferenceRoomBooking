@model IEnumerable<ConferenceRoomBooking.Models.Reservation>
@{
    ViewData["Title"] = "Moje rezerwacje";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nowa rezerwacja</a>
</p>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Sala</th>
                    <th>Data rozpoczęcia</th>
                    <th>Data zakończenia</th>
                    <th>Cel</th>
                    <th>Status</th>
                    <th>Utworzono</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Room.Name</td>
                        <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(item.Purpose.Length > 50 ? item.Purpose.Substring(0, 50) + "..." : item.Purpose)</td>
                        <td>
                            @switch (item.Status)
                            {
                                case ConferenceRoomBooking.Models.ReservationStatus.Pending:
                                    <span class="badge bg-warning">Oczekuje</span>
                                    break;
                                case ConferenceRoomBooking.Models.ReservationStatus.Approved:
                                    <span class="badge bg-success">Zatwierdzona</span>
                                    break;
                                case ConferenceRoomBooking.Models.ReservationStatus.Rejected:
                                    <span class="badge bg-danger">Odrzucona</span>
                                    break;
                                case ConferenceRoomBooking.Models.ReservationStatus.Cancelled:
                                    <span class="badge bg-secondary">Anulowana</span>
                                    break;
                            }
                        </td>
                        <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                                
                                @if (item.Status == ConferenceRoomBooking.Models.ReservationStatus.Pending)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                                }
                                
                                @if (item.Status != ConferenceRoomBooking.Models.ReservationStatus.Cancelled 
                                    && item.Status != ConferenceRoomBooking.Models.ReservationStatus.Rejected)
                                {
                                    <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Czy na pewno chcesz anulować tę rezerwację?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Anuluj</button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Nie masz jeszcze żadnych rezerwacji.</p>
        <p><a asp-action="Create" class="btn btn-primary">Utwórz pierwszą rezerwację</a></p>
    </div>
}