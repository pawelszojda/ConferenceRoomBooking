@model ConferenceRoomBooking.Models.ConferenceRoom
@{
    ViewData["Title"] = "Szczegóły sali";
}

<h1>@Model.Name</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Opis</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            
            <dt class="col-sm-3">Pojemność</dt>
            <dd class="col-sm-9">@Model.Capacity osób</dd>
            
            <dt class="col-sm-3">Cena za godzinę</dt>
            <dd class="col-sm-9">@Model.PricePerHour.ToString("C")</dd>
            
            <dt class="col-sm-3">Wyposażenie</dt>
            <dd class="col-sm-9">@Model.Equipment</dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success">Dostępna</span>
                }
                else
                {
                    <span class="badge bg-danger">Niedostępna</span>
                }
            </dd>
        </dl>
        
        <div class="mt-4">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Reservations" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-primary">Zarezerwuj tę salę</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Zaloguj się aby zarezerwować</a>
            }
            
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Usuń</a>
            }
            
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <h3>Nadchodzące rezerwacje</h3>
        @if (Model.Reservations.Any(r => r.Status == ConferenceRoomBooking.Models.ReservationStatus.Approved && r.StartTime > DateTime.Now))
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Data i godzina</th>
                        <th>Użytkownik</th>
                        <th>Cel</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.Reservations.Where(r => r.Status == ConferenceRoomBooking.Models.ReservationStatus.Approved && r.StartTime > DateTime.Now).OrderBy(r => r.StartTime))
                    {
                        <tr>
                            <td>@reservation.StartTime.ToString("dd.MM.yyyy HH:mm") - @reservation.EndTime.ToString("HH:mm")</td>
                            <td>@reservation.User.Email</td>
                            <td>@reservation.Purpose</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Brak nadchodzących rezerwacji.</p>
        }
    </div>
</div>